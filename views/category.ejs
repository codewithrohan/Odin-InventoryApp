<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
</head>

<body>

    <h1>Your Categories</h1>


    <% if (locals.categories) { %>
    <ol>
        <% categories.forEach(category => { %>
        <li>
            <a href="/category/items/<%=category.Name %>"> <%=category.Name %></a>
            <p> <%=category.description %> </p>
            <p><a href="<%=category.url %>">Visit website</a></p>

            <button name="edit"><a href="/category/edit/<%=category._id %>">edit category </a> </button>
            <button name="delete"><a href="/category/delete/<%=category._id %>"> delete category</a> </button>
        </li>
        <% }) %>

    </ol>
    <li> <button type="button" class="btn btn-primary" name="add-new"><a href="/category/add-new">Add-new</a></button>
    </li>

    <% } %>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
    </script>
</body>

</html>




